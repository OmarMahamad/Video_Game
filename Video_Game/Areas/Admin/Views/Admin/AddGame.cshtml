@model Video_Game.Models.Games
@{
    ViewData["Title"] = "AddGame";
    Layout = "~/Areas/Admin/Views/Sherd/_LayoutAdmin.cshtml";
}
<div class="container">
    <h2>إضافة لعبة جديدة</h2>
    <form asp-area="Admin" asp-controller="Admin" asp-action="AddGame" method="post" enctype="multipart/form-data">
        <label for="title">عنوان اللعبة:</label>
        <input type="text" id="title" asp-for="Titel" required>

        <label for="genre">نوع اللعبة:</label>
        <input type="text" id="genre" asp-for="Genre" required>

        <label for="price">السعر:</label>
        <input type="number" id="price" asp-for="Price" step="0.01" required>

        <label for="image">صورة اللعبة:</label>
        <input type="file" id="image" name="image" accept="png,jpg" onchange="previewImage(event)" required>

        <div class="image-preview" id="imagePreview">
            <p>لم يتم اختيار صورة بعد.</p>
        </div>

        <input type="submit" value="إضافة اللعبة">
    </form>
</div>

<script>
    function previewImage(event) {
        var imagePreview = document.getElementById('imagePreview');
        imagePreview.innerHTML = '';
        var file = event.target.files[0];
        var reader = new FileReader();

        reader.onload = function() {
            var img = document.createElement('img');
            img.src = reader.result;
            imagePreview.appendChild(img);
        };

        reader.readAsDataURL(file);
    }
</script>